{
  "description": "Task cluster development vagrant box",
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "dev_vagrant/scripts/docker.sh",
        "dev_vagrant/scripts/node.sh",
        "dev_vagrant/scripts/python.sh",
        "dev_vagrant/scripts/postgres.sh",
        "dev_vagrant/scripts/rabbitmq.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "boxes/dev_base/packer-virtualbox-iso.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "output_directory": "boxes/dev_vagrant"
    },
    {
      "type": "amazon-ebs",
      "region": "us-west-2",
      "source_ami": "ami-62e78652",
      "instance_type": "m3.large",
      "ssh_username": "ubuntu",
      "ami_name": "testcluster-ubuntu-dev {{timestamp}}",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "Latest"
      }
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "output": "boxes/dev_vagrant.box",
      "keep_input_artifact": true
    }
  ]
}
